extends layout 

block content
    h1= title 

    form(method='POST' action='')
        div.form-group
            label(for='book') Book:
            select#book.form-control(
                placeholder='Select book' 
                name='book' 
                required)

                - book_list.sort((a, b) => {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return textA < textB ? -1 : (textA > textB ? 1 : 0);});
                for book in book_list
                    option(
                        value=book._id
                        selected=(selected_book===book._id.toString() ? 'selected': false)
                    ) #{book.title}

        div.form-group
            label(for='imprint') Imprint: 
            input#imprint.form-control(
                type='text'
                placeholder='Publisher and date information' 
                name='imprint'
                required 
                value=(bookinstance===undefined ? '' : bookinstance.imprint)
            )
        
        div.form-group
            label(for="due_back") Date when book available:
            input#due_back.form-control(
                type='date'
                name='due_back'
                value=(bookinstance===undefined ? '' : bookinstance.due_back)
            ) 

        div.form-group
            label(for="status") Status: 
            select#status.form-control(
                placeholder='Select status'
                name='status'
                required
            ) 
                option(value='Maintenance') Maintenance
                option(value='Available') Available
                option(value='Loaned') Loaned
                option(value='Reserved') Reserved
        
        button.btn.btn-primary Submit
    
    if errors 
        ul 
            for error in errors 
                li= error.msg         